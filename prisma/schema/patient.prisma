model Patient {
    id            String   @id @default(uuid())
    email         String   @unique
    name          String
    profilePhoto  String?
    contactNumber String?
    address       String?
    isDeleted     Boolean  @default(false)
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt

    user User @relation(fields: [email], references: [email])

    @@map("patients")
}
